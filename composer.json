{
  "name": "t3v/t3v_delivery",
  "type": "typo3-cms-extension",
  "description": "The TYPO3Voila delivery extension.",
  "authors": [
    {
      "name": "Maik Kempe",
      "email": "mkempe@bitaculous.com",
      "homepage": "https://bitaculous.com"
    }
  ],
  "keywords": [
    "CDN",
    "CMS",
    "Delivery",
    "Extension",
    "T3v",
    "TYPO3",
    "TYPO3voila",
    "UH LÁLÁ"
  ],
  "homepage": "https://t3v.github.io/t3v_delivery/",
  "support": {
    "issues": "https://github.com/t3v/t3v_delivery/issues"
  },
  "license": "MIT",
  "config": {
    "bin-dir": ".build/bin",
    "vendor-dir": ".build/vendor"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "replace": {
    "t3v_delivery": "self.version",
    "typo3-ter/t3v_delivery": "self.version"
  },
  "repositories": [
    { "type": "composer", "url": "https://composer.typo3.org" }
  ],
  "require": {
    "php": ">= 7.0 < 7.3",
    "phlak/config": "~3.0.1",
    "texthtml/php-lock": "~2.2.1",
    "albertofem/rsync-lib": "~1.0.0",
    "typo3/cms-core": "^7.6",
    "t3v/t3v_core": "dev-7-0"
  },
  "require-dev": {
    "mikey179/vfsStream": "^1.6",
    "namelesscoder/typo3-repository-client": "^2.0",
    "nimut/testing-framework": "^1.1",
    "phpunit/phpunit": "^5.7"
  },
  "autoload": {
    "psr-4": {
      "T3v\\T3vDelivery\\": "Classes"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "T3v\\T3vDelivery\\Tests\\": "Tests",
      "TYPO3\\CMS\\Core\\Tests\\": ".build/vendor/typo3/cms/typo3/sysext/core/Tests",
      "TYPO3\\CMS\\Fluid\\Tests\\": ".build/vendor/typo3/cms/typo3/sysext/fluid/Tests"
    }
  },
  "extra": {
    "typo3/cms": {
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": ".build/web"
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "mkdir -p .build/web/typo3conf/ext/",
      "[ -L .build/web/typo3conf/ext/t3v_delivery ] || ln -snvf ../../../../. .build/web/typo3conf/ext/t3v_delivery"
    ]
  }
}